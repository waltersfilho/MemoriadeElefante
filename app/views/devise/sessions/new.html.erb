<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<section id="login" class="content section-grey" style="background: url(public/img/pixel_weave.png) repeat;">
    	<div class="container">
        	<div class="row">
            	
                <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                	<div class="login-box box-shadow rounded-x2">
                        <h4 class="text-center weight-700">Login</h4>
                        <hr />
                        <div class="input-group">
                        	<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <%= f.email_field :email, autofocus: true, class:"form-control" %>
                        </div>
                        
                        <div class="input-group">
                        	<span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
                        </div>
                        
                        <div class="form-group">  
                            <% if devise_mapping.rememberable? -%>
                              <%= f.check_box :remember_me %>
                              <%= f.label :Lembrar_de_mim %>
                            <%end%>
                            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                              <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class:"pull-right" %><br />
                            <% end -%>
                        </div>
                        
                        <%= f.submit "Log in", class:"btn btn-lg btn-block pi-btn-default rounded" %>
                        
               		</div><!-- end login-box --> 
                    <p class="text-center small-text">Ainda n√£o possui uma conta? 
                      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                        <%= link_to "Cadastre-se", new_registration_path(resource_name) %><br />
                      <% end -%></p>
            	</div><!-- end col-4 -->
                
            </div><!-- end row -->
        </div><!-- end container -->
    </section>
    <%end%>
