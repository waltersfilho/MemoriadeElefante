<p id="notice"><%= notice %></p>

<body>
  <div class="col-sm-12 padd">
    <section class="content-2 section-grey">
      <div class="container">
        <div class="row">

          <h1 class="text-center">Partidos</h1>
          <div class="line"></div>

          <div class="col-sm-24">
            <div class="padd">
              <p style="text-align: center">Selecione o estado e confira todos os feitos dos políticos brasileiros.</p>

            </div>
          </div><!-- end row -->
        </div><!-- end container -->
      </div>
    </div>
    </section>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Sigla</th>
        <th>Número de políticos</th>
        <th>Legenda</th>
      </tr>
      </thead>
      <tbody>
      <% @partidos.each do |partido| %>
          <tr>
            <td><%= link_to image_tag(partido.photo.url(:thumb)), partido %></td>
            <td><h3><%= partido.descricao %></h3></td>
            <td><h3><%= partido.sigla %></h3></td>
            <td><h3><%= partido.numero_politicos %></h3></td>
            <td><h3><%= partido.legenda %></h3></td>
          </tr>
      <% end %>
      </tbody>
    </table>
</body>
